<html>

<head>
    <meta charset="utf-8">
    <title>Let's Chat</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="HandheldFriendly" content="true">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="css/loading.css">
    <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/video.css">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/theme.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body class="theme-body-light">
    <div class="container">
        <nav class="navbar navbar-light pb-0">
            <span class="navbar-brand h1 text-info text-center" style="width: 100%;">
                <button class="btn btn-sm float-right" onclick="changeTheme()">
                    <img id="theme-icon" src="assets/sunny.svg" style="height: 25px;">
                </button>
                Let's chat
            </span>
        </nav>
        <div class="d-flex justify-content-start" style="height: 19.5px;">
            <small id="username-empty" class="text-danger pl-2" style="display: none;">Don't you
                have a name?</small>
        </div>
        <div class="row mb-3">
            <div class="col-lg-5 mb-2">
                <input type="text" class="form-control" id="username" placeholder="Username">
            </div>
            <div class="col-lg-7 mb-2 d-flex flex-row justify-content-start" id="button-section">
                <button class="btn btn-info text-center" id="changename" type="button"
                    style="max-width: 300px; width: 100%; max-height: 38px;">Change username</button>
                <button class="btn btn-info text-center ml-2" type="button" data-toggle="modal"
                    data-target="#room-modal" style="max-width: 300px; width: 100%; max-height: 38px;">Join
                    room</button>
                <button class="btn btn-info text-center ml-2" type="button" data-toggle="modal"
                    data-target="#host-modal" style="max-width: 300px; width: 100%; max-height: 38px;">Host
                    room</button>
            </div>
        </div>
        <div class="row main-chat-group">
            <div class="card col-xl-9 parent theme-content-light border" style="height: 100%;">
                <div class="card-header row d-flex justify-content-between theme-header-light" style="min-height: 56px;">
                    <div class="theme-text-light">Chat Section</div>
                    <div class="theme-text-light" id="room-iddisplay">Room Public</div>
                </div>
                <div class="card-body">
                    <div style="height: 100%; padding: 10px 0 0 0 !important;" id="chat-card">
                        <table class="table table-sm table-borderless" id="chat-table"
                            style="margin-bottom: 0px !important;">
                            <tbody id="chat-content" class="mr-3">
                                <!-- Chat content in here -->
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-end row theme-header-light" style="flex-wrap: nowrap;">
                    <div class="input-group mr-3">
                        <div class="input-group-prepend">
                            <div class="btn-group dropup">
                                <button type="button" class="btn theme-emoji-light dropdown-toggle border" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-smile-o" style="font-size: large;"></i>
                                </button>
                                <div class="dropdown-menu bg-light" id="icon-list"
                                    style="max-height: 17rem; width: 20rem; overflow: scroll;">
                                    <!-- Emoji list go here -->
                                </div>
                            </div>
                        </div>
                        <input class="form-control theme-message" type="text" id="message" value="" placeholder="Your message...">
                    </div>
                    <button class="btn btn-info btn-block text-center" id="send" style="max-width: 70px;">Send</button>
                </div>
            </div>
            <div class="card col-xl-3 theme-content-light border" style="height: 100%;">
                <div class="card-header row d-flex justify-content-between theme-header-light" style="height: 56px;">
                    <div class="theme-text-light"><span id="people-number" class="text-info">0</span> people</div>
                    <!-- group-call button -->
                    <button type="button" class="btn btn-sm btn-outline-info call align-middle"
                        onclick="groupCallHit()">Group Call<i class="fa fa-video-camera ml-2"
                            aria-hidden="true"></i></button>
                </div>
                <div class="card-body px-0 py-0">
                    <div class="pt-3" style="height: 100%; overflow-y: scroll;">
                        <table class="table table-sm" id="member-table">
                            <tbody id="room-member">
                                <!-- Room member in here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- <button class="btn btn-outline-info btn-block" data-toggle="modal" data-target="#call-window-group">Trigger</button> -->
    </div>
    <div class="loader-wrapper">
        <!-- Loading square for squar.red network -->
        <span class="loader"><span class="loader-inner"></span></span>
    </div>
    <!-- Call Window -->
    <div class="modal bd-example-modal-lg fade" id="call-window" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content call-modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Video Call</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body container-fluid">
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-11 col-sm-12 col-md-12">
                            <div class="d-flex justify-content-sm-start">
                                <video id="remoteVideo" autoplay playsinline></video>
                                <video id="localVideo" autoplay playsinline></video>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <h6 id="calling-status" class="ml-5"></h6>
                    <button type="button" id="end-call-button" class="btn btn-info" data-dismiss="modal">End
                        Call</button>
                </div>
            </div>
        </div>
    </div>
    <!-- //Call Window -->
    <!-- Group Call Window -->
    <div class="modal bd-example-modal-xl fade" id="call-window-group" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content call-modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Group Call</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body container-fluid" id="group-call-body">
                    <div id="group-call-row1" class="row d-flex justify-content-center">
                        <div class="col">
                            <video id="localGroupVideo" autoplay playsinline
                                style="max-width: 100%; max-height: 100%;"></video>
                        </div>
                        <!-- Remote group video -->
                    </div>
                    <div id="group-call-row2" class="row d-flex justify-content-start" style="max-height: 100%;">
                        <!-- Remote group video -->
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <h6 id="group-calling-status" class="ml-5"></h6>
                    <div>
                        <button type="button" id="add-new-callee" class="btn btn-success mr-2">Add</button>
                        <button type="button" id="end-group-call-button" class="btn btn-info" data-dismiss="modal">End
                            Call</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //Group Call Window -->
    <!-- Group call init -->
    <div class="modal bd-example-modal-lg fade" id="group-call-init" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content container-fluid room-modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Join a room</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body container-fluid">
                    <div class="row mh-100">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <input type="text" class="form-control mt-2" id="people-search-input"
                                    placeholder="Search" onkeyup="groupCallFilter()">
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="group-check-all"
                                    onclick="groupSelectAll()">
                                <label class="form-check-label" for="group-check-all">Select all</label>
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <table class="table fixed">
                                <thead>
                                    <tr>
                                        <th scope="col" width="15%" class="align-middle">#</th>
                                        <th scope="col" width="70%" class="align-middle">Name</th>
                                        <th scope="col" width="15%" class="align-middle"></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div class="row mh-100">
                        <div class="col-lg-9 room-suff order-lg-2">
                            <table class="table table-hover fixed">
                                <tbody id="group-call-member">

                                </tbody>
                            </table>
                        </div>
                        <div class="col-lg-3 order-lg-1">
                            <div class="form-group">
                                <p class="text-muted" style="font-size: small;">You can make a video call with up to 5
                                    other people</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer row">
                    <div class="col-sm-3">
                        <div id="group-call-spinner" class="spinner-grow text-info" role="status"></div>
                    </div>
                    <div class="col-sm-3">
                        <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal"
                            data-target="#group-call-init">Close</button>
                    </div>
                    <div class="col-sm-3">
                        <button type="button" class="btn btn-info btn-block" data-dismiss="modal"
                            data-target="#group-call-init" onclick="groupCallInit()">Call</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //Group call init -->
    <!-- Group call incoming -->
    <div class="modal bd-example-modal-md fade" id="group-call-incomming" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Video Call</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6><span id="group-caller-name" class="text-info"></span> made a group video call.</h6>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="groupCallRespone(1)" class="btn btn-success"
                        data-dismiss="modal">Answer</button>
                    <button type="button" onclick="groupCallRespone(0)" class="btn btn-danger"
                        data-dismiss="modal">Decline</button>
                </div>
            </div>
        </div>
    </div>
    <!-- //Group call imcoming -->
    <!-- Join group call comfirm -->
    <div class="modal bd-example-modal-md fade" id="group-call-join-confirm" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Video Call</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6>Do you want to join group call with <span class="text-info" id="group-call-join-name"></span> ?
                    </h6>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="groupCallRespone(1)" class="btn btn-success"
                        data-dismiss="modal">Answer</button>
                    <button type="button" onclick="groupCallRespone(0)" class="btn btn-danger"
                        data-dismiss="modal">Decline</button>
                </div>
            </div>
        </div>
    </div>
    <!-- //Join group call comfirm -->
    <!-- Get Call Window -->
    <div class="modal bd-example-modal-md fade" id="call-incomming" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Video Call</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6><span id="caller-name" class="text-info"></span> is calling.</h6>
                    <h6>Caller id: <span id="caller-id"></span></h6>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="callRespone(1)" class="btn btn-success"
                        data-dismiss="modal">Answer</button>
                    <button type="button" onclick="callRespone(0)" class="btn btn-danger"
                        data-dismiss="modal">Decline</button>
                </div>
            </div>
        </div>
    </div>
    <!-- //Get Call Window -->

    <!-- Ava room -->
    <div class="modal bd-example-modal-xl fade" id="room-modal" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content container-fluid room-modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Join a room</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body container-fluid">
                    <div class="row mh-100">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <input type="text" class="form-control mt-2" id="room-search-input"
                                    placeholder="Search a room" onkeyup="roomFilter()">
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <table class="table fixed">
                                <thead>
                                    <tr>
                                        <th scope="col" width="20%" class="align-middle">#</th>
                                        <th scope="col" width="50%" class="align-middle">Room name</th>
                                        <th scope="col" width="30%" class="align-middle">Number of poeple</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div class="row mh-100">
                        <div class="col-lg-9 room-suff float-right">
                            <table class="table table-hover fixed">
                                <tbody id="room-list">

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer row">
                    <div class="col-sm-3">
                        <div id="suff-spinner" class="spinner-grow text-info" role="status"></div>
                    </div>
                    <div class="col-sm-3">
                        <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal"
                            data-target="#join-host-modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //Ava room -->

    <!-- Join room -->
    <div class="modal bd-example-modal-md fade" id="join-modal" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content container-fluid">
                <div class="modal-header">
                    <h5 class="modal-title">Join a room</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="join-room-username">Username</label>
                        <input type="text" class="form-control" id="join-room-username" placeholder="Username">
                        <small id="join-name-taken" class="form-text text-danger">This name is already taken</small>
                        <small id="join-name-empty" class="form-text text-danger">You don't have a name?</small>
                    </div>
                    <div class="form-group">
                        <label for="join-room-id">Room name</label>
                        <input class="form-control border" id="join-room-id" disabled>
                    </div>
                    <div class="form-group">
                        <label for="join-room-password">Password</label>
                        <input type="text" class="form-control" id="join-room-password" placeholder="Room password">
                        <small id="join-password-wrong" class="form-text text-danger">Wrong password</small>
                    </div>
                </div>
                <div class="modal-footer row">
                    <div class="col-sm-3">
                        <div id="join-spinner" class="spinner-grow text-info" role="status"></div>
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal"
                            data-target="#join-host-modal">Cancel</button>
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-info btn-block" id="join-button">Join</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //Join room -->
    <!-- Host room -->
    <div class="modal bd-example-modal-md fade" id="host-modal" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content container-fluid">
                <div class="modal-header">
                    <h5 class="modal-title">Host a room</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="host-room-id">Room name</label>
                            <input type="text" class="form-control mb-2" id="host-room-id" placeholder="Room name"
                                list="exist-room">
                            <small id="host-room-taken" class="form-text text-danger">This room name is already
                                taken</small>
                            <small id="host-room-empty" class="form-text text-danger">A room need a name</small>
                            <small id="host-room-regex-error" class="form-text text-danger">Name can't contain
                                <strong>special character</strong></small>
                        </div>
                        <div class="form-group">
                            <label for="host-room-password">Password</label>
                            <input type="text" class="form-control" id="host-room-password" placeholder="Room password">
                        </div>
                    </form>
                </div>
                <div class="modal-footer row">
                    <div class="col-sm-3">
                        <div id="host-spinner" class="spinner-grow text-info" role="status"></div>
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal"
                            data-target="#join-host-modal">Cancel</button>
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-info btn-block" id="host-button">Host</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //Host room -->

    <!-- No name call warning -->
    <div class="modal bd-example-modal-md fade" id="call-no-name" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content container-fluid">
                <div class="modal-header">
                    <h5 class="modal-title">Please add a name first.</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6>For security reason, please change your name first.</h6>
                    <h6>Then you will be able to call other people.</h6>
                </div>
                <div class="modal-footer row">
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal"
                            data-target="#join-host-modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //No name call warning -->
    <!-- Being kicked modal -->
    <div class="modal bd-example-modal-md fade" id="kicked-modal" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content container-fluid">
                <div class="modal-header">
                    <h5 class="modal-title">You have been kicked</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6>You have been kicked by <span id="kicker" class="text-info"></span></h6>
                </div>
                <div class="modal-footer row">
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal"
                            data-target="#join-host-modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //Being kicked modal -->
    <script src="jquery/dist/jquery.min.js"></script>
    <script src="jquery-cookie/jquery-cookie.min.js"></script>
    <script>
        $("html,body").animate({ scrollTop: 0 }, 'fast');
    </script>
    <script src="js/init.js"></script>
    <script src="socket.io/socket.io.js"></script>
    <script src="peerjs/peer.min.js"></script>
    <script src="js/ulti.js"></script>
    <script src="js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
    <script src="js/video-call.js"></script>
    <script src="js/group-call.js"></script>
</body>

</html>