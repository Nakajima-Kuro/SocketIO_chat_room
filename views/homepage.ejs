<html>

<head>
    <meta charset="utf-8">
    <title>Let's Chat</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="HandheldFriendly" content="true">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/video.css">
    <link rel="stylesheet" href="css/styles.css">
</head>

<body class="container">
    <nav class="navbar navbar-light bg-white mb-1">
        <span class="navbar-brand h1 text-info text-center" style="width: 100%;">Let's chat</span>
    </nav>
    <div class="row mb-3">
        <div class="col-lg-5 mb-2">
            <input type="text" class="form-control" id="username" placeholder="Username">
            <small id="username-empty" class="form-text text-danger mb-2 pl-2" style="display: none;">Don't you have a
                name?</small>
        </div>
        <div class="col-lg-7 mb-2 d-flex flex-row justify-content-start">
            <button class="btn btn-info text-center" id="changename" type="button"
                style="max-width: 300px; width: 100%; max-height: 38px;">Change username</button>
            <button class="btn btn-info text-center ml-2" type="button" data-toggle="modal" data-target="#room-modal"
                style="max-width: 300px; width: 100%; max-height: 38px;">Join room</button>
            <button class="btn btn-info text-center ml-2" type="button" data-toggle="modal" data-target="#host-modal"
                style="max-width: 300px; width: 100%; max-height: 38px;">Host room</button>
        </div>
    </div>
    <div class="row">
        <div class="card col-xl-9 parent">
            <div class="card-header row d-flex justify-content-between">
                <div>Chat Section</div>
                <div id="room-iddisplay">Room Public</div>
            </div>
            <div class="card-body" style="height: 25rem; padding-bottom: 0px !important;" id="chat-card">
                <table class="table table-sm" id="chat-table" style="margin-bottom: 0px !important;">
                    <tbody id="chat-content">
                        <!-- Chat content in here -->
                    </tbody>
                </table>
            </div>
            <div class="card-footer d-flex justify-content-end row" style="flex-wrap: nowrap;">
                <input class="form-control mr-3" type="text" id="message" value="">
                <button class="btn btn-info btn-block text-center" id="send" style="max-width: 100px;">Send</button>
            </div>
        </div>
        <div class="card col-xl-3">
            <div class="card-header row d-flex justify-content-between">
                <div>Room member</div>
                <div id="people-number"></div>
            </div>
            <div class="mt-3 overflow-auto" style="height: 25rem; overflow-y: scroll;">
                <table class="table table-sm" id="member-table">
                    <tbody id="room-member">
                        <!-- Room member in here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Call Window -->
    <div class="modal bd-example-modal-lg fade" id="call-window" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content call-modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Video Call</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body container-fluid">
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-11 col-sm-12 col-md-12">
                            <div class="d-flex justify-content-sm-start">
                                <video id="remoteVideo" autoplay playsinline></video>
                                <video id="localVideo" autoplay playsinline></video>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <h6 id="calling-status" class="ml-5"></h6>
                    <button type="button" id="end-call-button" class="btn btn-info" data-dismiss="modal">End
                        Call</button>
                </div>
            </div>
        </div>
    </div>
    <!-- //Call Window -->
    <!-- Get Call Window -->
    <div class="modal bd-example-modal-md fade" id="call-incomming" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Video Call</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6><span id="caller-name" class="text-info"></span> is calling.</h6>
                    <h6>Caller id: <span id="caller-id"></span></h6>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="callRespone(1)" class="btn btn-success"
                        data-dismiss="modal">Answer</button>
                    <button type="button" onclick="callRespone(0)" class="btn btn-danger"
                        data-dismiss="modal">Decline</button>
                </div>
            </div>
        </div>
    </div>
    <!-- //Get Call Window -->

    <!-- Ava room -->
    <div class="modal bd-example-modal-xl fade" id="room-modal" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content container-fluid room-modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Join a room</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body container-fluid">
                    <div class="row mh-100">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <input type="text" class="form-control mt-2" id="room-search-input"
                                    placeholder="Search a room" onkeyup="roomFilter()">
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <table class="table fixed">
                                <thead>
                                    <tr>
                                        <th scope="col" width="20%" class="align-middle">#</th>
                                        <th scope="col" width="50%" class="align-middle">Room name</th>
                                        <th scope="col" width="30%" class="align-middle">Number of poeple</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div class="row mh-100">
                        <div class="col-lg-9 room-suff float-right">
                            <table class="table table-hover fixed">
                                <tbody id="room-list">

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer row">
                    <div class="col-sm-3">
                        <div id="suff-spinner" class="spinner-grow text-info" role="status"></div>
                    </div>
                    <div class="col-sm-3">
                        <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal"
                            data-target="#join-host-modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //Ava room -->

    <!-- Join room -->
    <div class="modal bd-example-modal-md fade" id="join-modal" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content container-fluid">
                <div class="modal-header">
                    <h5 class="modal-title">Join a room</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="join-room-username">Username</label>
                        <input type="text" class="form-control" id="join-room-username" placeholder="Username">
                        <small id="join-name-taken" class="form-text text-danger">This name is already taken</small>
                        <small id="join-name-empty" class="form-text text-danger">You don't have a name?</small>
                    </div>
                    <div class="form-group">
                        <label for="join-room-id">Room name</label>
                        <input class="form-control border" id="join-room-id" disabled>
                    </div>
                    <div class="form-group">
                        <label for="join-room-password">Password</label>
                        <input type="text" class="form-control" id="join-room-password" placeholder="Room password">
                        <small id="join-password-wrong" class="form-text text-danger">Wrong password</small>
                    </div>
                </div>
                <div class="modal-footer row">
                    <div class="col-sm-3">
                        <div id="join-spinner" class="spinner-grow text-info" role="status"></div>
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal"
                            data-target="#join-host-modal">Cancel</button>
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-info btn-block" id="join-button">Join</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //Join room -->
    <!-- Host room -->
    <div class="modal bd-example-modal-md fade" id="host-modal" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content container-fluid">
                <div class="modal-header">
                    <h5 class="modal-title">Host a room</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="host-room-id">Room name</label>
                            <input type="text" class="form-control mb-2" id="host-room-id" placeholder="Room name"
                                list="exist-room">
                            <small id="host-room-taken" class="form-text text-danger">This room name is already
                                taken</small>
                            <small id="host-room-empty" class="form-text text-danger">A room need a name</small>
                            <small id="host-room-regex-error" class="form-text text-danger">Name can't contain
                                <strong>special character</strong></small>
                        </div>
                        <div class="form-group">
                            <label for="host-room-password">Password</label>
                            <input type="text" class="form-control" id="host-room-password" placeholder="Room password">
                        </div>
                    </form>
                </div>
                <div class="modal-footer row">
                    <div class="col-sm-3">
                        <div id="host-spinner" class="spinner-grow text-info" role="status"></div>
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal"
                            data-target="#join-host-modal">Cancel</button>
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-info btn-block" id="host-button">Host</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //Host room -->

    <!-- No name call warning -->
    <div class="modal bd-example-modal-md fade" id="call-no-name" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content container-fluid">
                <div class="modal-header">
                    <h5 class="modal-title">Please add a name first.</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6>For security reason, please change your name first.</h6>
                    <h6>Then you will be able to call other people.</h6>
                </div>
                <div class="modal-footer row">
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal"
                            data-target="#join-host-modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //No name call warning -->
    <script src="jquery/dist/jquery.slim.min.js"></script>
    <script src="js/init.js"></script>
    <script src="socket.io/socket.io.js"></script>
    <script src="peerjs/peer.min.js"></script>
    <script src="js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
    <script src="js/video-call.js"></script>
</body>

</html>